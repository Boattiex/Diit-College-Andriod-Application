<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/textview_title_kanabodee"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Title_Kanabodee"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            />

        <ImageView
            android:id="@+id/imageView_Kanabodee"
            android:adjustViewBounds="true"
            android:layout_marginTop="30dp"
            android:layout_width="400dp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_below="@id/textview_title_kanabodee"/>

        <TextView
            android:id="@+id/textview_message_kanabodee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/imageView_Kanabodee"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/textview_message_kanabodee_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/textview_message_kanabodee"
            android:textSize="16sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/button_goto_bachelor"
            android:layout_centerInParent="true"
            android:text="ดูข้อมูลเพิ่มเติม(หลักสูตรปริญญาตรี)"
            android:layout_below="@id/textview_message_kanabodee_2"/>

        <TextView
            android:id="@+id/textview_message_kanabodee_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/button_goto_bachelor"
            android:textSize="16sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/button_goto_master"
            android:layout_centerInParent="true"
            android:text="ดูข้อมูลเพิ่มเติม(หลักสูตรปริญญาโท)"
            android:layout_below="@id/textview_message_kanabodee_3"/>

        <TextView
            android:id="@+id/textview_message_kanabodee_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/button_goto_master"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/button_goto_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:text="ดูข้อมูลเพิ่มเติม(หลักสูตรปริญญาเอก)"
            android:layout_below="@id/textview_message_kanabodee_4"/>

    </RelativeLayout>
</ScrollView>