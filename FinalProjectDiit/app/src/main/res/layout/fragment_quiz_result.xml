<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".QuizResultFragment">


    <TextView
        android:id="@+id/text_result_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="ยินดีด้วย!" />

    <TextView
        android:id="@+id/text_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/text_result_congrats"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="ผลลัพธ์ : สาขาที่เหมาะกับคุณ คือ " />

    <TextView
        android:id="@+id/text_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_below="@id/text_result_title"
        android:textSize="20sp"
        android:lines="7"
        android:text="" />

    <Button
        android:id="@+id/button_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_result_text"
        android:text="ลองดูอีกครั้ง?" />
    <Button
        android:id="@+id/button_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/button_again"
        android:text="ดูข้อมูลของแต่ละสาขา (ปริญญาตรี)" />

    <Button
        android:id="@+id/button_statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_course"
        android:text="ดูสถิติผลลัพธ์ของแต่ละสาขา" />

</RelativeLayout>
</ScrollView>