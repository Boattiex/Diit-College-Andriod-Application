<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CmtBachelorFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Title_Cmt_Bachelor"
            android:textSize="20dp"
            android:textColor="@color/colorTextTitleCourse"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtTitleNameCourse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="รหัสและชื่อหลักสูตร"
            android:layout_below="@+id/txtTitle"
            android:textSize="18dp"
            android:textColor="@color/colorTextTitleCourse"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtNameCourse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtTitleNameCourse1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txtTitleNameCourse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="ชื่อปริญญาและสาขาวิชา"
            android:layout_below="@+id/txtNameCourse1"
            android:textSize="18dp"
            android:textColor="@color/colorTextTitleCourse"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtNameCourse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtTitleNameCourse2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txtTitleImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="ความสำคัญ"
            android:layout_below="@+id/txtNameCourse2"
            android:textSize="18dp"
            android:textColor="@color/colorTextTitleCourse"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtImportanceCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtTitleImportance"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txtCreditsCourse"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtImportanceCourse"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:text="หน่วยกิต"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtTuitionFee"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtImportanceCourse"
            android:layout_toRightOf="@+id/txtCreditsCourse"
            android:gravity="center"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:text="ค่าเรียนตลอดหลักสูตร"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:id="@+id/structure_courses_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorStructureCourseBG"
            android:layout_below="@+id/txtCreditsCourse"
            >
            <TextView
                android:id="@+id/txtTitleStructureCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="25dp"
                android:text="โครงสร้างหลักสูตร"
                android:textSize="20dp"
                android:textColor="@color/colorTextTitleCourse"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtTitleTimeStructureCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="ระยะเวลาการศึกษาตลอดหลักสูตร 4 ปี"
                android:layout_below="@+id/txtTitleStructureCourse"
                android:textSize="18dp"
                android:textColor="@color/colorTextTitleCourse"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtTimeStructureCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txtTitleTimeStructureCourse"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txtTitleCreditsStructureCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:text="จำนวนหน่วยกิต ตลอดหลักสูตร"
                android:layout_below="@+id/txtTimeStructureCourse"
                android:textSize="18dp"
                android:textColor="@color/colorTextTitleCourse"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtCreditsStructureCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/txtTitleCreditsStructureCourse"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txtTitleGeneralCourses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Title General Courses"
                android:layout_below="@+id/txtCreditsStructureCourse"
                android:textSize="18dp"
                android:background="@drawable/back_title"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtGeneralCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/txtTitleGeneralCourses"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txtTitleSpecificCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Title Specific Courses"
                android:layout_below="@+id/txtGeneralCourses"
                android:textSize="18dp"
                android:background="@drawable/back_title"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtSpecificCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtTitleSpecificCourses"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txtElectiveCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/txtSpecificCourses"
                android:textSize="18dp"
                android:background="@drawable/back_title"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtTitlePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:text="แผนการศึกษา"
                android:layout_below="@+id/txtElectiveCourses"
                android:textSize="18dp"
                android:textColor="@color/colorTextTitleCourse"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imageViewPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/txtTitlePlan"
                android:src="@drawable/img_cmt_plan"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitleCareerApproach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="แนวทางการประกอบอาชีพ"
            android:layout_below="@+id/structure_courses_layout"
            android:textSize="18dp"
            android:textColor="@color/colorTextTitleCourse"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtCareerApproach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtTitleCareerApproach"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            />
    </RelativeLayout>
</ScrollView>
